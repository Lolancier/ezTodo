{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "eztodo",
  "version": "0.1.0",
  "identifier": "com.prism.eztodo",
  "build": {
    "beforeDevCommand": "pnpm -C otherP dev",
    "devUrl": "http://localhost:3001",
    "beforeBuildCommand": "pnpm -C otherP build",
    "frontendDist": "../otherP/out",
    "additionalWatchFolders": []
  },
  "app": {
    "windows": [
      {
        "title": "eztodo",
        "width": 1100,
        "height": 900,
        "decorations": false
      }
    ],
    "security": {
      "csp": "default-src 'self' 'unsafe-inline' 'unsafe-eval' data: blob:; connect-src 'self' https://api.deepseek.com https://api.openai.com ws: wss:; font-src 'self' data:; img-src 'self' data: blob:; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; frame-src 'self'; object-src 'none'; base-uri 'self';",
      "dangerousDisableAssetCspModification": false
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "http": {
      "scope": [
        "https://api.deepseek.com/*",
        "https://api.openai.com/*"
      ]
    }
  }
}